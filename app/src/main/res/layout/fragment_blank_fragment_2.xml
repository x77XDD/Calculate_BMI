<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wzbc.bmi.BlankFragment_2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#D3D3D3"
        android:padding="3dp"
        android:id="@+id/backcolor_b"
        >

        <ImageView
            android:id="@+id/heightjpg_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_height" />

        <TextView
            android:id="@+id/heightwenzi_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/heightjpg_b"
            android:text="@string/hhh"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/heightshuru_b"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/heightshuru"
            android:inputType="number" />

        <ImageView
            android:id="@+id/weightjpg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heightjpg_b"
            android:layout_marginTop="2dp"
            android:background="@drawable/icon_weight" />

        <TextView
            android:id="@+id/weightwenzi_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/heightwenzi_b"
            android:layout_alignTop="@id/weightjpg"
            android:layout_marginTop="10dp"
            android:text="@string/waist"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/weightshuru_b"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/weightwenzi_b"
            android:layout_alignRight="@id/heightshuru_b"
            android:inputType="number" />

        <ImageView
            android:id="@+id/sexjpg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weightjpg"
            android:layout_marginTop="1dp"
            android:background="@drawable/icon_sex" />

        <TextView
            android:id="@+id/sexwenzi_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/heightwenzi_b"
            android:layout_alignTop="@id/sexjpg"
            android:layout_marginTop="10dp"
            android:text="@string/sss"
            android:textSize="20sp" />

        <!--<Button-->
            <!--android:id="@+id/sexshuru_b"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignLeft="@id/heightshuru_b"-->
            <!--android:layout_alignRight="@id/heightshuru_b"-->
            <!--android:layout_alignTop="@id/sexwenzi_b"-->
            <!--android:layout_below="@id/weightshuru"-->
            <!--android:text="背景颜色" />-->



        <ImageView
            android:id="@+id/chosesexjpg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weightjpg"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/sex_equal" />


        <Button
            android:id="@+id/calculate_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/heightshuru_b"
            android:layout_below="@id/sexjpg"
            android:layout_marginTop="2dp"
            android:text="@string/js" />

        <!--<Button-->
            <!--android:id="@+id/xiugaijisuanfangshi"-->
            <!--android:layout_width="wrap_content"-->
