            <!--android:layout_below="@id/sexjpg"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="英制/公制"-->
            <!--/>-->

        <TextView
            android:id="@+id/yourwhr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calculate_b"
            android:layout_marginTop="2dp"
            android:background="#76EEC6"
            android:gravity="center_horizontal"
            android:padding="1dp"
            android:text="@string/whi"
            android:textColor="#fcfcfc"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ideal_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yourwhr"
            android:layout_marginTop="2dp"
            android:background="#76EEC6"
            android:gravity="center_horizontal"
            android:padding="1dp"
            android:text="@string/ideal"
            android:textColor="#fcfcfc"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ideal_advice"
            android:layout_marginTop="2dp"
            android:background="#668B8B"
            android:gravity="center_horizontal"
            android:text="@string/WHRtab"
            android:textColor="#1E1E1E"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/table"
            android:layout_margin="2dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFD700"
                android:gravity="center"
                android:text="@string/ran" />

            <TextView
                android:id="@+id/aaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
